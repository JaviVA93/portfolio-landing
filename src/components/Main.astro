---
import { languageList } from "../i18n/ui";
import { useTranslations } from "../i18n/utils";

const currentLang = Astro.currentLocale || 'es';

const translatedLabels = useTranslations(currentLang as keyof typeof languageList)
---

<div id="main-container">
    <div class="hi">
        <h1>{translatedLabels('main-title')}</h1>
        <div class="hand">âœ‹</div>
    </div>
    <div>
        <h2>
            {translatedLabels('main-subtitle-1')}
        </h2>
        <h2>
            {translatedLabels('main-subtitle-2')}
        </h2>
    </div>
    <div class="links">
        <span>{translatedLabels('main-more-about-me')}</span>
        <a
            href="https://www.linkedin.com/in/javier-villar-almiron/"
            target="_blank"
        >
            <img src="/linkedin.svg" />
            <span>Linkedin</span>
        </a>
        <a href="https://github.com/JaviVA93" target="_blank">
            <img src="/github.svg" />
            <span>Github</span>
        </a>
    </div>
</div>

<style>
    @media (max-width: 900px) {
        #main-container {
            
        }
    }

    #main-container {
        position: absolute;
        top: 20%;
        left: 50%;
        transform: translateX(-50%);
        display: flex;
        flex-direction: column;
        gap: 16px;
        padding: 24px;
        background-color: rgb(210, 247, 244);
        width: 75%;
        max-width: 700px;
        height: fit-content;
        border-radius: 8px;
        box-shadow: 0px 0px 8px 0px;
    }

    .hi {
        display: flex;
        align-items: flex-end;

        h1 {
            height: 32px;
        }
    }

    .hand {
        font-size: 40px;
        display: inline-block;
        transform-origin: 50% 80%;
        animation: salute 6s cubic-bezier(0.4, 0, 0.2, 1) infinite;
    }

    h1,
    h2,
    span,
    a {
        color: rgb(3, 63, 57);
        margin: 0;
    }

    .links {
        display: flex;
        flex-direction: column;
        gap: 8px;

        a {
            all: unset;
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 4px;
            margin-left: 8px;
            transition: margin 0.5s ease;
            width: fit-content;

            background-color: rgb(179, 245, 238);
            padding: 8px;
            border-radius: 8px;
            border: 1px solid rgb(27, 80, 75);

            img {
                width: 24px;
            }
        }

        a:hover {
            margin-left: 16px;
        }
    }

    @keyframes salute {
        0%,
        45%,
        100% {
            transform: rotate(-15deg); /* Neutral position */
        }
        15%,
        30% {
            transform: rotate(-35deg); /* Hand moves up & rotates */
        }
        22% {
            transform: rotate(-20deg); /* Hand moves up & rotates */
        }
    }
</style>
